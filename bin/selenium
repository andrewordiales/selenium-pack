#!/usr/bin/env node

var lib = require('..');

var $1 = process.argv[2];


switch($1) {
  case 'start':
    lib.init.start();
    break;

  case 'stop':
    lib.init.stop();
    break;

  case 'clear':
    lib.init.clear();
    break;

  case 'version':
    console.log('This selenium-pack contains selenium standalone server version:', lib.selenium.getVersion());
    break;

  default:
    console.log('Usage: selenium {start|stop|clear}');
    console.log('  start: start selenium server');
    console.log('  stop: stop selenium server');
    console.log('  clear: delete the pid file');

}
